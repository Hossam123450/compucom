{% extends 'base.html.twig' %}
{% block corpDuDocument %}
<div class="container" style="margin-top: 100px;">
    <h1>Liste des Produits</h1>
    <div class="row">
      {% for product in products %}
        <div class="col-md-4">
          <div class="card mb-4">
            <img src="{{ vich_uploader_asset(product,'attachmentFile') }}" class="card-img-top" alt="{{ product.title }}">
            <div class="card-body">
              <h5 class="card-title">{{ product.title }}</h5>
              <p class="card-text">{{ product.subtitle }}</p>
              <p class="card-text">Prix: {{ (product.price/100)|number_format(2,',','.') }} â‚¬</p>
              <a href='{{path('cart_add',{id: product.id})}}'>Add to cart</a>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
{% endblock %}
